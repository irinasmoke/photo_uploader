# Environment configuration for the Local Photo Uploader application
# Copy this file to .env and update with your actual values (optional)

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log

# Local Storage Configuration (optional)
# UPLOAD_DIR=uploads/photos
# METADATA_DIR=uploads/metadata
# MAX_FILE_SIZE=104857600  # 100MB in bytes

# Security Configuration (for production)
# SESSION_SECRET_KEY=your_secret_key_here
# CORS_ORIGINS=["https://yourdomain.com"]

# Note: This is a local application - no cloud services required!
# All photos are stored locally in the uploads/ directory